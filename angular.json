{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "DevBestStudio": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "sass"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/DevBestStudio",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.sass",

              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "src/assets/css/font-awesome.min.css",
              "src/assets/css/linea-icon.css",
              "src/assets/css/fancy-buttons.css",

              "src/assets/css/animate.css",
              "src/assets/css/jquery.vegas.css",
              "src/assets/css/baraja.css",
              "src/assets/css/jquery.bxslider.css",


              "src/assets/css/style.css",
              "src/assets/css/responsive.css",



              "src/assets/css/schemes/red.css",
              "src/assets/css/schemes/orange.css",

              "src/assets/css/schemes/gray.css",
              "src/assets/css/color-switcher.css"
            ],
            "scripts": [
              "src/assets/js/jquery-1.11.1.min.js",
              "node_modules/bootstrap/dist/js/bootstrap.js",

              "src/assets/js/bootstrapValidator.min.js",
              "src/assets/js/modernizr.js",
              "src/assets/js/jquery.easing.1.3.js",

              "src/assets/js/jquery.baraja.js",
              "src/assets/js/jquery.vegas.min.js",
              "src/assets/js/jquery.bxslider.min.js",

              "src/assets/js/jquery.ajaxchimp.min.js",
              "src/assets/js/jquery.nicescroll.min.js",
              "src/assets/js/jquery.nav.js",
              "src/assets/js/jquery.appear.js",
              "src/assets/js/jquery.fitvids.js",


              "src/assets/js/custom.js",

              "src/assets/js/color-switcher.js",
              "src/assets/js/afterLoad.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "DevBestStudio:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "DevBestStudio:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "DevBestStudio:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.sass"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "DevBestStudio:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "DevBestStudio:serve:production"
            }
          }
        }
      }
    }},
  "defaultProject": "DevBestStudio"
}
